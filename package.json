{
  "name": "unm-server-v2",
  "version": "2.0.0",
  "description": "现代化音乐API服务 - 全面重构版本",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "start": "pnpm -r start",
    "test": "pnpm -r test",
    "test:e2e": "pnpm -r test:e2e",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @unm/database db:generate",
    "db:push": "pnpm --filter @unm/database db:push",
    "db:migrate": "pnpm --filter @unm/database db:migrate",
    "db:studio": "pnpm --filter @unm/database db:studio",
    "docker:build": "docker build -t unm-server-v2 .",
    "docker:run": "docker run -p 3000:3000 -p 5678:5678 unm-server-v2",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,ts,vue,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "music-api",
    "unm-server",
    "bun",
    "hono",
    "nuxt",
    "typescript",
    "modern"
  ],
  "author": "UNM-Server Team",
  "license": "MIT"
}