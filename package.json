{
  "name": "unm-server-v2",
  "version": "2.0.0",
  "description": "纯后端音乐API服务 - 高性能生产环境版本",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "start": "pnpm -r start",
    "db:generate": "pnpm --filter @unm/database db:generate",
    "db:push": "pnpm --filter @unm/database db:push",
    "db:migrate": "pnpm --filter @unm/database db:migrate",
    "docker:build": "docker build -t unm-server-v2 .",
    "docker:run": "docker run -p 5678:5678 unm-server-v2"
  },
  "keywords": [
    "music-api",
    "unm-server",
    "bun",
    "hono",
    "typescript",
    "production"
  ],
  "author": "UNM-Server Team",
  "license": "MIT",
  "devDependencies": {
    "tsc-alias": "^1.8.16"
  }
}