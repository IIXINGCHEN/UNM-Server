{
  "name": "@unm/database",
  "version": "2.0.0",
  "description": "UNM-Server V2 数据库集成包",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx src/seed.ts",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/bcrypt": "^5.0.2",
    "@unm/shared": "workspace:*",
    "bcrypt": "^6.0.0",
    "pg": "^8.11.3",
    "prisma": "^5.7.1"
  },
  "devDependencies": {
    "@types/pg": "^8.10.9",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "prisma"
  ],
  "keywords": [
    "database",
    "prisma",
    "postgresql",
    "orm",
    "unm-server"
  ],
  "author": "UNM-Server Team",
  "license": "MIT"
}
